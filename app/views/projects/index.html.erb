<br>
<%= form_for @projects, url: busca_path, method: :busca, remote: true ,:html => {:name => "form_busca", :id => "form_busca"} do |f| %>  

	<table border="0" width="100%" cellpadding="0" cellspacing="0">

		<tr class="Linha1Tabela">
		  <td width="35%" height="40" align="right" valign="middle">Categoria:&nbsp;</td>
		  <td align="left" valign="middle">&nbsp;
		  	<%= collection_select(:project, :id_categoria,Category.order(:nome_categoria),:id_categoria, :nome_categoria, {},
		  		{:data => {  :remote => true,
                    :url => url_for(:controller => "projects", 
                                    :action => "ListSubCategory")
                }
        }) %>

		  </td>
		</tr>
		<tr class="Linha1Tabela">
		  <td width="35%" height="40" align="right" valign="middle">T&iacute;tulo:&nbsp;</td>
		  <td align="left" valign="middle">&nbsp;
		  	<%= f.text_field :titulo%>
		  </td>
		</tr>  
		<tr class="Linha1Tabela">
		  <td width="35%" height="40" align="right" valign="middle">Data:&nbsp;</td>
		  <td align="left" valign="middle">&nbsp;
		  	<%= f.text_field :data_inicial ,:class =>"datepicker" %>
		    a 
		  <%= f.text_field :data_final ,:class =>"datepicker"%>
		  </td>
		</tr>                                              
		<tr class="Linha1Tabela">
		    <td height="60" colspan="2" align="center" valign="middle">
		   		 <%= f.submit "Pesquisar" , class:"button" %>
		    </td>                        
		</tr> 
	</table>
<% end %>
<div id="list_projects"></div>


<% content_for :js do%> 
  $(document).ready(function() {
    $( ".datepicker" ).datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: "dd/mm/yy"
        });
  });
<% end%>